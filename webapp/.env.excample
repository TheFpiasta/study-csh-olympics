NODE_ENV="production"# ("production", "development") Set to "production" for production environment
LOG_LEVEL="warn"# debug, info, warn, error
USE_FILE_LOGGING=true# Set to true to log to a file
USE_CONSOLE_LOGGING=false# Set to true to log to the console
LOG_DIRECTORY="logs"# Directory for log files
LOG_ROTATION_PERIOD="weekly"# Log rotation period (daily, weekly, monthly)

# Browser-accessible versions (NEXT_PUBLIC_ prefix makes them available to client-side)
NEXT_PUBLIC_LOG_LEVEL="warn"# debug, info, warn, error (for browser)
NEXT_PUBLIC_USE_FILE_LOGGING=true# Set to true to log to a file (for browser)
NEXT_PUBLIC_USE_CONSOLE_LOGGING=false# Set to true to log to the console (for browser)
